<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.jobportal.controllers.AdminDashboardController"
           stylesheets="@dashboard.css"
           styleClass="root-pane">

    <VBox spacing="20" alignment="CENTER" styleClass="dashboard-content">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        <Text text="Admin Dashboard" styleClass="dashboard-title"/>
        <TabPane>
            <Tab text="Manage Users">
                <VBox spacing="10">
                    <ListView fx:id="userListView"/>
                    <Button text="Delete Selected User" onAction="#handleDeleteUser" styleClass="primary-button"/>
                </VBox>
            </Tab>
            <Tab text="Manage Jobs">
                <VBox spacing="10">
                    <ListView fx:id="jobListView"/>
                    <Button text="Delete Selected Job" onAction="#handleDeleteJob" styleClass="primary-button"/>
                </VBox>
            </Tab>
            <Tab text="Manage Applications">
                <VBox spacing="10">
                    <ListView fx:id="applicationListView"/>
                    <Button text="Delete Selected Application" onAction="#handleDeleteApplication" styleClass="primary-button"/>
                </VBox>
            </Tab>
        </TabPane>
        <Button text="Back to Login" onAction="#handleLogout" styleClass="button-secondary"/>
    </VBox>
</AnchorPane>
