<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.jobportal.controllers.MessagesController"
           stylesheets="@com/jobportal/jobportal/styles.css"
           styleClass="root-pane">

    <VBox spacing="20" alignment="CENTER" styleClass="dashboard-content">
        <Text text="Messages" styleClass="dashboard-title"/>
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="recipientField" promptText="Recipient Email" styleClass="input-field" HBox.hgrow="ALWAYS"/>
        </HBox>
        <TextArea fx:id="messageField" promptText="Type your message here..." styleClass="input-field" prefRowCount="5"/>
        <Button text="Send Message" onAction="#handleSendMessage" styleClass="primary-button"/>
        <Label text="Message History" styleClass="section-title"/>
        <ListView fx:id="messageListView" VBox.vgrow="ALWAYS" styleClass="job-list"/>
        <Button text="Back to Dashboard" onAction="#goToDashboard" styleClass="button-secondary"/>
    </VBox>
</AnchorPane>
